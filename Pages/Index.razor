@page "/"
@page "/home"

<PageTitle>AwsHelper</PageTitle>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="hero-section text-center py-5 text-white rounded-3">
                <img src="/images/awshelper_side_transparent.png" alt="AwsHelper" class="logo-large mb-3" />
                <p class="lead mb-4">Gerenciamento do AWS Parameter Store</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap"></div>
            </div>
        </div>
    </div>

    <!-- Features Cards -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm card-primary">
                <div class="card-body text-center">
                    <div class="feature-icon feature-icon-primary mb-3">
                        <span class="oi oi-list-rich display-4"></span>
                    </div>
                    <h4 class="card-title">Gerenciar Variáveis</h4>
                    <p class="card-text mb-4">
                        Visualize, adicione e gerencie parâmetros do Parameter Store com busca e adição em lote.
                    </p>
                    <a href="/parameter-store/variables" class="btn btn-primary">Acessar</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm card-secondary">
                <div class="card-body text-center">
                    <div class="feature-icon feature-icon-secondary mb-3">
                        <span class="oi oi-folder display-4"></span>
                    </div>
                    <h4 class="card-title">Gerenciar Caminhos</h4>
                    <p class="card-text mb-4">
                        Navegue pela estrutura hierárquica dos parâmetros com suporte a múltiplos perfis AWS.
                    </p>
                    <a href="/parameter-store/paths" class="btn btn-secondary">Acessar</a>
                </div>
            </div>
        </div>
    </div>
</div>
