                </div>
                <div class="modal-footer">
                    @if (!IsEditingParameter)
                    {
                        <button type="button" class="btn btn-warning" @onclick="StartEditParameter" disabled="@IsLoading">
                            <span class="oi oi-pencil me-1"></span>
                            Editar
